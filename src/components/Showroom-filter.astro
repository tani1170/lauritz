---
import "../styles/style.css";
import Checkbox from "./Checkbox.astro";
---

<article>
  <p class="cardtitle">Showroom</p>
  <div>
    <Checkbox beskrivelse="Danmark" />
    <Checkbox beskrivelse="Belgien" />
  </div>
</article>

<style>
  article {
    border-radius: var(--radius-medium);
    box-shadow: var(--shadow-card);
    margin-top: 10px;
    margin-bottom: 10px;
    padding-top: 5px;
    padding-left: 20px;
    padding-right: 20px;
    padding-bottom: 5px;

    background-color: var(--color-card);
    width: 17rem;
  }
  div {
    display: flex;
    gap: 15px;
  }
</style>
